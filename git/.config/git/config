[push]
        default=simple

[core]
        editor=vim
        filemode=false
[diff]
        tool=vimdiff
[merge]
        tool=vimdiff
[status]
        submodulesummary=true
[color]
        diff=auto
        status=auto
        ui=auto
[difftool]
        prompt = false
[includeIf "gitdir:~/Code/OSS/"]
        path = ~/.git_private
[includeIf "gitdir:~/Code/Work/"]
        path = ~/.git_work
[includeIf "gitdir:~/Code/VCE/"]
        path = ~/.git_vce
[alias]
  co = checkout
  c = commit
  s = status
  d = diff
  l = "!. ~/.config/git/helpers && git_pretty_log"
  lo = log --oneline
  lg = log --oneline --graph
  a = add
